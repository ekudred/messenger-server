{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "es2016",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "incremental": true,
    "strict": true
  }
}
